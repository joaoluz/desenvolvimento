<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
	  <groupId>br.mcti.gov.br</groupId>
	  <artifactId>solicitacao-backend</artifactId>
	  <version>0.0.1-SNAPSHOT</version>
  </parent>

  <artifactId>solicitacao-service-app</artifactId>
  <packaging>ear</packaging>

  <build>
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <version>2.8</version>
        <configuration>
          <filtering>true</filtering>
          <finalName>${project.artifactId}</finalName>
          <defaultLibBundleDir>lib</defaultLibBundleDir>
          <generateApplicationXml>true</generateApplicationXml>
          <modules>
            <webModule>
              <groupId>br.mcti.gov.br</groupId>
              <artifactId>solicitacao-service</artifactId>
              <contextRoot>solicitacao-servico</contextRoot>
            </webModule>
            <ejbModule>
              <groupId>br.mcti.gov.br</groupId>
              <artifactId>solicitacao-business</artifactId>
            </ejbModule>
            <jarModule>
              <groupId>br.gov.mcti</groupId>
              <artifactId>jee7-framework</artifactId>
            </jarModule>
            <jarModule>
              <groupId>br.mcti.gov.br</groupId>
              <artifactId>solicitacao-integration</artifactId>
            </jarModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>br.mcti.gov.br</groupId>
      <artifactId>solicitacao-business</artifactId>
      <version>${project.version}</version>
      <type>ejb</type>
    </dependency>
    <dependency>
      <groupId>br.mcti.gov.br</groupId>
      <artifactId>solicitacao-service</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
		<groupId>br.gov.mcti</groupId>
  		<artifactId>jee7-framework</artifactId>
		<version>${version.jee7framework}</version>
		<type>jar</type>
	</dependency>
    <dependency>
      <groupId>br.mcti.gov.br</groupId>
      <artifactId>solicitacao-integration</artifactId>
      <version>${project.version}</version>
      <type>jar</type>
    </dependency>
  </dependencies>

</project>
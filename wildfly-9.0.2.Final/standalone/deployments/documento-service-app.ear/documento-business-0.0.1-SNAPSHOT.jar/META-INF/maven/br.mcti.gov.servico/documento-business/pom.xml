	<artifactId>documento-business</artifactId>
	<packaging>ejb</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ejb-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<ejbVersion>3.1</ejbVersion>
					<generateClient>true</generateClient>
					<clientIncludes>
						<clientInclude>br/mcti/gov/servico/documento/business/*</clientInclude>
						<clientInclude>br/mcti/gov/servico/documento/exception/**</clientInclude>
						<clientInclude>br/mcti/gov/servico/documento/vo/**</clientInclude>
						<clientInclude>br/mcti/gov/servico/documento/dto/**</clientInclude>
					</clientIncludes>
					<clientExcludes>
						<clientExclude>br/mcti/gov/servico/documento/business/impl/*</clientExclude>
					</clientExcludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

